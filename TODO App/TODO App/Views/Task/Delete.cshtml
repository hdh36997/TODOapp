@model TODO_App.Models.TaskModel

@{
    ViewData["Title"] = "Usuń";
}

<script> //Skrypt JS aby przy usuwaniu pytało nas, czy na pewno chcemy to usunąć
    function deleteConfirmation() {
        if (confirm("Czy na pewno chcesz usunąć ten element?")) {
            return true;
        } else {
            return false;
        }
    }
</script>

<h1 class="display-4">Usuwanie zadania</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripiton)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripiton)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Done)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Done)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskID" />
        <input type="submit" value="Usuń" class="btn btn-danger" onclick="return deleteConfirmation();" /> @*Implementacja skryptu*@
        <a asp-action="Index">
            <img src="~/Images/back-arrow.png" width="50" height="50" alt="Back" style="cursor:pointer;" />
        </a>
    </form>
</div>
