@model TODO_App.Models.TaskModel

@{
    ViewData["Title"] = "Dodaj";
}

<h1 class="display-4">Dodawanie nowego zadania</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripiton" class="control-label"></label>
                <textarea asp-for="Descripiton" class="form-control" style="height: 200px;" wrap="hard"></textarea>
                <span asp-validation-for="Descripiton" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Done" /> @Html.DisplayNameFor(model => model.Done)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-action="Index">
                    <img src="~/Images/back-arrow.png" width="50" height="50" alt="Back" style="cursor:pointer;" />
                </a>
            </div>
        </form>
    </div>
</div>
